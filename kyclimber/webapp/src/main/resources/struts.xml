<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <!-- /////////////// -->
    <!-- Package DEFAULT -->
    <package name="default" abstract="true" extends="struts-default, json-default">

        <!-- Interceptor Stack -->
        <interceptors>
            <interceptor name="auth" class="fr.kybox.interceptor.AuthInterceptor"/>
            <interceptor-stack name="authenticatedStack">
                <interceptor-ref name="auth"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>

        <!-- Global results -->
        <global-results>
            <result name="error">jsp/error.jsp</result>
            <result name="error-forbidden" type="httpheader">
                <param name="error">403</param>
            </result>
        </global-results>

    </package>

    <!-- [PUBLIC] Package -->
    <package name="public" extends="default">

        <!-- [INDEX] Action -->
        <default-action-ref name="index"/>
        <action name="index" class="fr.kybox.action.HomeAction">
            <result>jsp/index.jsp</result>
        </action>

        <!-- [LOGIN] Action -->
        <action name="login" class="fr.kybox.action.LoginAction" method="doLogin">
            <result name="input">jsp/auth/login.jsp</result>
            <result name="error">jsp/auth/login.jsp</result>
            <result name="success" type="redirectAction">index</result>
        </action>

        <!-- [LOGOUT] Action -->
        <action name="logout" class="fr.kybox.action.LoginAction" method="doLogout">
            <result type="redirectAction">index</result>
        </action>

        <!-- [REGISTER] Action -->
        <action name="signup" class="fr.kybox.action.SignupAction">
            <result name="input">jsp/auth/signup.jsp</result>
            <result name="success">jsp/auth/signup.jsp</result>
        </action>

        <!-- [SITE] Action -->
        <action name="site" class="fr.kybox.action.SiteAction">
            <result name="success">jsp/site/site.jsp</result>
        </action>

        <!-- [SEARCH] Action -->
        <action name="search" class="fr.kybox.action.SearchAction">
            <result name="success">jsp/search/search.jsp</result>
        </action>

        <!-- [TOPO] Action -->
        <action name="topo" class="fr.kybox.action.TopoAction">
            <result name="success">jsp/topo/topo.jsp</result>
        </action>
        <action name="topoAjax" class="fr.kybox.action.TopoAction" method="getTopoAjax">
            <result type="json"/>
        </action>
    </package>

    <!-- /////////////// -->
    <!-- Package PRIVATE -->
    <package name="private" extends="default">

        <!-- Profile Action -->
        <action name="profile" class="fr.kybox.action.UserAction">
            <interceptor-ref name="authenticatedStack"/>
            <result name="success">jsp/user/profile/profile.jsp</result>
        </action>

        <!-- Update Ajax User Infos Action-->
        <action name="updateAjaxUserInfos" class="fr.kybox.action.UserAction" method="updateAjaxInfos">
            <interceptor-ref name="authenticatedStack"/>
            <result name="success" type="json">
                <param name="root">user</param>
            </result>
        </action>

        <!-- [PASSWORD] - Update Ajax Action -->
        <action name="updateAjaxUserPassword" class="fr.kybox.action.PasswordAction" method="updateAjaxUserPassword">
            <interceptor-ref name="authenticatedStack"/>
            <result type="json"/>
        </action>

        <!-- [AVATAR] - Update Ajax Action -->
        <action name="updateAjaxUserAvatar" class="fr.kybox.action.AvatarAction" method="updateAjaxUserAvatar">
            <interceptor-ref name="authenticatedStack"/>
            <result name="success" type="json"/>
        </action>

        <!-- [TOPO] - Update Ajax Action -->
        <action name="updateAjaxUserTopo" class="fr.kybox.action.manager.TopoManagerAction" method="updateAjaxUserTopo">
            <interceptor-ref name="authenticatedStack"/>
            <result name="success" type="json">
                <param name="root">topoList</param>
            </result>
        </action>

        <!-- [COMMENT] - Update Ajax Action -->
        <action name="updateAjaxUserComment" class="fr.kybox.action.CommentAction" method="updateAjaxUserComment">
            <interceptor-ref name="authenticatedStack"/>
            <result type="json"/>
        </action>

        <!-- [COMMENT] - Delete Ajax Action -->
        <action name="deleteAjaxUserComment" class="fr.kybox.action.CommentAction" method="deleteAjaxUserComment">
            <interceptor-ref name="authenticatedStack"/>
            <result type="json"/>
        </action>

        <action name="addNewAjaxComment" class="fr.kybox.action.CommentAction" method="addNewAjaxComment">
            <interceptor-ref name="authenticatedStack"/>
            <result name="success" type="json">
                <param name="root">commentList</param>
            </result>
        </action>
    </package>
</struts>