<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <!-- Package DEFAULT -->
    <package name="default" abstract="true" extends="struts-default">
        <global-results>
            <result name="error">jsp/error.jsp</result>
        </global-results>
    </package>

    <!-- Package PUBLIC -->
    <package name="public" extends="default">

        <!-- Index Action -->
        <default-action-ref name="index"/>
        <action name="index">
            <result>jsp/index.jsp</result>
        </action>

        <!-- Login Action -->
        <action name="login" class="fr.kybox.action.LoginAction" method="doLogin">
            <result name="input">jsp/login.jsp</result>
            <result name="success" type="redirectAction">index</result>
        </action>
        <action name="logout" class="fr.kybox.action.LoginAction" method="doLogout">
            <result type="redirectAction">index</result>
        </action>

        <!-- Register Action -->
        <action name="register" class="fr.kybox.action.RegisterAction" method="doRegistration">
            <result name="input">jsp/registration.jsp</result>
            <result name="success" type="redirectAction">login</result>
        </action>

        <!-- Topo Action -->
        <action name="topo" class="fr.kybox.action.TopoAction" method="doGetTopo">
            <result name="success">jsp/site.jsp</result>
        </action>

        <action name="home" class="fr.kybox.action.HomeAction" method="doHome">
            <result name="success">jsp/home.jsp</result>
        </action>




        <action name="user" class="fr.kybox.action.UserAction" method="doList">
            <result name="success">jsp/user.jsp</result>
        </action>
    </package>
</struts>